{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "composite": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2018", "dom"],
        "types": ["node"],
        "typeRoots": ["../node_modules/@types"]
    },
    "include": [
        "./src",
    ]
}
